<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QHRMCodeTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QHRMCodeTest.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500;1,700&display=swap" rel="stylesheet">


    <!-- CSS Files -->
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/plugins/datatables/datatables.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="~/css/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css" />
    <link href="~/assets/css/feather.css" rel="stylesheet" />


    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <style>
        /* Specific styling for the compact table */
        .table-compact {
            border-collapse: collapse !important; /* Ensure no extra spacing */
        }

            .table-compact td,
            .table-compact th {
                padding: 4px 8px !important; /* Reduce padding */
                vertical-align: middle !important; /* Align text vertically */
            }

            .table-compact tr {
                height: 25px !important; /* Reduce row height */
            }

            .table-compact .badge {
                padding: 2px 6px !important; /* Adjust badge padding */
            }

            .table-compact th {
                padding-top: 5px !important;
                padding-bottom: 5px !important;
            }

        table th, table td {
            word-wrap: break-word !important;
        }

        .table-compact th {
            padding: 10px 15px !important; /* Increase padding for header */
            background-color: #f8f9fa; /* Optional: Light background color for header */
        }

        /* Align text to the center */
        .center {
            text-align: left !important;
        }

        .right {
            text-align: right !important;
        }
        /* Optional: Add vertical alignment for better visuals */
        .table td, .table th {
            vertical-align: middle;
        }
        /* Align text to the left */
        .left {
            text-align: left !important;
        }

        /* Adjust alignment for table-specific td/th */
        .table td.left, .table th.left {
            text-align: left !important;
        }

        .pagination-section .pagination {
            margin: 0;
        }

        .pagination .page-item .page-link {
            border-radius: 20px;
            color: #007bff;
        }

        .pagination .page-item.active .page-link {
            background-color: #007bff;
            color: white;
            border: none;
        }

        .text-left {
            text-align: left !important;
        }

        .text-center {
            text-align: center !important;
        }

        .text-right {
            text-align: right !important;
        }

        .table th,
        .table td {
            padding: 10px !important;
        }

        .text-danger {
            color: #e63946 !important;
        }

        .text-success {
            color: #28a745 !important;
        }

        .text-secondary {
            color: #6c757d !important;
        }

        .btn-secondary {
            background-color: #17a2b8 !important;
            color: white;
        }


            .btn-secondary:hover {
                background-color: #138496;
            }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .badge.bg-primary {
            background-color: #007bff !important;
        }

        .badge.bg-danger {
            background-color: #e63946 !important;
        }

        .badge.bg-success {
            background-color: #28a745 !important;
        }
    </style>
</head>
<body>

    <div class="main-wrapper">
        <div class="content container-fluid">
            <!-- Loading Overlay -->
            <div id="loading-overlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(255, 255, 255, 0.7); z-index:20000;">
                <div style="position:absolute; top:50%; left:50%; transform:translate(-50%, -50%);">
                    <div class="spinner-border text-info m-2" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                    <h5>please wait.</h5>
                </div>
            </div>

            @RenderBody()
        </div>

        <footer>
            <p>Copyright © 2025.</p>
        </footer>
    </div>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/assets/js/feather.min.js" defer></script>
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js" defer></script>
    <script src="~/assets/plugins/datatables/datatables.min.js" defer></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="~/assets/js/jquery-ui.min.js"></script>
    <script src="~/assets/plugins/bootstrap-tagsinput/js/bootstrap-tagsinput.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.js"></script>

    <script src="~/js/toastr.min.js" defer></script>

    <script src="~/assets/js/script.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
